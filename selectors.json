{
  "_meta": {
    "description": "All selectors for Claude.ai automation. Edit this file when UI changes.",
    "lastValidated": "2024-12-25T00:00:00.000Z",
    "tips": [
      "Use data-testid when available (most stable)",
      "Fallback to aria-label or role-based selectors",
      "Use text selectors as last resort (locale-dependent)",
      "Run 'npm run test-selectors' to validate all selectors"
    ]
  },

  "navigation": {
    "projectsLink": {
      "description": "Link to navigate to Projects section in sidebar",
      "strategies": [
        "a[aria-label='Projects']",
        "a[href='/projects']"
      ]
    },
    "newChatLink": {
      "description": "Link to start a new chat",
      "strategies": [
        "a[aria-label='New chat']",
        "a[href='/new']"
      ]
    },
    "sidebarToggle": {
      "description": "Toggle to open/close sidebar",
      "strategies": [
        "[data-testid='pin-sidebar-toggle']",
        "button[aria-label='Open sidebar']"
      ]
    },
    "sidebar": {
      "description": "The sidebar navigation",
      "strategies": [
        "nav[aria-label='Sidebar']"
      ]
    },
    "allProjectsLink": {
      "description": "Back link to all projects from project detail",
      "strategies": [
        "a:has-text('All projects')",
        "[data-testid='page-header'] a"
      ]
    }
  },

  "projectList": {
    "pageHeader": {
      "description": "Projects page header",
      "strategies": [
        "[data-testid='page-header']",
        "header:has-text('Projects')"
      ]
    },
    "searchInput": {
      "description": "Search projects input",
      "strategies": [
        "input[placeholder*='Search' i]"
      ]
    },
    "createProjectButton": {
      "description": "Button to create a new project",
      "strategies": [
        "button:has-text('New project')"
      ]
    },
    "projectItem": {
      "description": "Individual project card/link in the projects list",
      "strategies": [
        "a[href^='/project/']"
      ]
    },
    "yourProjectsTab": {
      "description": "Your projects tab/filter",
      "strategies": [
        "button:has-text('Your projects')"
      ]
    },
    "archivedTab": {
      "description": "Archived projects tab/filter",
      "strategies": [
        "button:has-text('Archived')"
      ]
    },
    "sortButton": {
      "description": "Sort projects dropdown",
      "strategies": [
        "button[aria-label='Sort projects']",
        "button:has-text('Activity')"
      ]
    }
  },

  "projectDetail": {
    "projectTitle": {
      "description": "Project title/name on detail page",
      "strategies": [
        "h1",
        "[data-testid='page-header'] h1"
      ]
    },
    "projectDescription": {
      "description": "Project description text",
      "strategies": [
        "h1 + p",
        "[class*='description']"
      ]
    },
    "starButton": {
      "description": "Star/favorite project button",
      "strategies": [
        "button[aria-label='Star project']",
        "button[aria-label='Unstar project']"
      ]
    },
    "moreOptionsButton": {
      "description": "More options menu button for project",
      "strategies": [
        "button[aria-label^='More options for']"
      ]
    },
    "editInstructionsButton": {
      "description": "Button to edit project instructions",
      "strategies": [
        "button[aria-label='Edit Instructions']",
        "button:has-text('Instructions')"
      ]
    },
    "instructionsSection": {
      "description": "Instructions section container",
      "strategies": [
        "section:has-text('Instructions')",
        "div:has-text('Add instructions')"
      ]
    },
    "memorySection": {
      "description": "Memory/context section",
      "strategies": [
        "section:has-text('Memory')",
        "div:has-text('Memory')"
      ]
    },
    "nameInput": {
      "description": "Project name input in create/edit modal",
      "strategies": [
        "[role='dialog'] input[type='text']",
        "input[placeholder*='name' i]",
        "input[aria-label*='name' i]"
      ]
    },
    "descriptionInput": {
      "description": "Project description input in create/edit modal",
      "strategies": [
        "[role='dialog'] textarea",
        "textarea[placeholder*='description' i]"
      ]
    },
    "instructionsTextarea": {
      "description": "Project instructions textarea in create/edit modal",
      "strategies": [
        "[role='dialog'] textarea",
        "textarea[placeholder*='instruction' i]",
        "textarea[aria-label*='instruction' i]"
      ]
    },
    "saveButton": {
      "description": "Save/create button in project modal",
      "strategies": [
        "[role='dialog'] button:has-text('Create')",
        "[role='dialog'] button:has-text('Save')",
        "button[type='submit']"
      ]
    },
    "settingsTab": {
      "description": "Settings tab in project detail",
      "strategies": [
        "button:has-text('Settings')",
        "[role='tab']:has-text('Settings')"
      ]
    },
    "deleteButton": {
      "description": "Delete project button in settings",
      "strategies": [
        "button:has-text('Delete project')",
        "button:has-text('Delete')"
      ]
    }
  },

  "projectFiles": {
    "filesSection": {
      "description": "Files section container",
      "strategies": [
        "section:has-text('Files')",
        "div:has-text('of project capacity')"
      ]
    },
    "addFilesButton": {
      "description": "Button to add files to project (opens dropdown)",
      "strategies": [
        "button[aria-label='Add files']",
        "[data-testid='project-doc-uploader-dropdown-trigger']"
      ]
    },
    "uploadFromDeviceOption": {
      "description": "Dropdown option to upload file from device",
      "strategies": [
        "text=Upload from device",
        "div:has-text('Upload from device'):not(:has(div:has-text('Upload from device')))",
        "[role='menuitem']:has-text('Upload from device')"
      ]
    },
    "addTextContentOption": {
      "description": "Dropdown option to add text content directly",
      "strategies": [
        "text=Add text content",
        "div:has-text('Add text content'):not(:has(div:has-text('Add text content')))",
        "[role='menuitem']:has-text('Add text content')"
      ]
    },
    "githubOption": {
      "description": "Dropdown option to connect GitHub",
      "strategies": [
        "div:has-text('GitHub'):not(:has(div:has-text('GitHub')))",
        "text=GitHub",
        "[role='menuitem']:has-text('GitHub')"
      ]
    },
    "googleDriveOption": {
      "description": "Dropdown option to connect Google Drive",
      "strategies": [
        "div:has-text('Google Drive'):not(:has(div:has-text('Google Drive')))",
        "text=Google Drive",
        "[role='menuitem']:has-text('Google Drive')"
      ]
    },
    "fileUploadInput": {
      "description": "Hidden file input for project docs",
      "strategies": [
        "[data-testid='project-doc-upload']",
        "input[type='file']"
      ]
    },
    "fileThumbnail": {
      "description": "Individual file card/thumbnail",
      "strategies": [
        "[data-testid='file-thumbnail']"
      ]
    },
    "fileCheckbox": {
      "description": "Checkbox to select a file",
      "strategies": [
        "[data-testid='file-thumbnail'] input[type='checkbox']",
        "input[type='checkbox']"
      ]
    },
    "capacityIndicator": {
      "description": "Project capacity usage indicator",
      "strategies": [
        "text=/\\d+% of project capacity/"
      ]
    },
    "textContentDialog": {
      "description": "Dialog for adding text content",
      "strategies": [
        "[role='dialog']:has-text('Add text content')",
        "[role='dialog']:has-text('text file')"
      ]
    },
    "textContentNameInput": {
      "description": "File name input in text content dialog",
      "strategies": [
        "[role='dialog'] input[type='text']",
        "input[placeholder*='name' i]"
      ]
    },
    "textContentTextarea": {
      "description": "Text content textarea in dialog",
      "strategies": [
        "[role='dialog'] textarea",
        "textarea[placeholder*='content' i]"
      ]
    },
    "textContentSaveButton": {
      "description": "Save button in text content dialog",
      "strategies": [
        "[role='dialog'] button:has-text('Add')",
        "[role='dialog'] button:has-text('Save')",
        "[role='dialog'] button[type='submit']"
      ]
    }
  },

  "projectConversations": {
    "conversationItem": {
      "description": "Individual conversation link within project",
      "strategies": [
        "a[href^='/chat/']"
      ]
    },
    "conversationTitle": {
      "description": "Conversation title text",
      "strategies": [
        "a[href^='/chat/'] > div:first-child"
      ]
    },
    "lastMessageTime": {
      "description": "Last message timestamp",
      "strategies": [
        "text=/Last message.*ago/"
      ]
    },
    "chatOptionsButton": {
      "description": "Options button for a conversation",
      "strategies": [
        "button[aria-label='Chat options']"
      ]
    }
  },

  "chat": {
    "messageInput": {
      "description": "Main chat input field (ProseMirror/TipTap editor)",
      "strategies": [
        "[data-testid='chat-input'] .ProseMirror",
        ".tiptap.ProseMirror",
        "div[role='textbox'][aria-label='Write your prompt to Claude']"
      ]
    },
    "messageInputSsr": {
      "description": "SSR textarea input (initial load, placeholder 'Reply...')",
      "strategies": [
        "[data-testid='chat-input-ssr']",
        "textarea[aria-label='Write your prompt to Claude']",
        "textarea[placeholder='Reply...']"
      ]
    },
    "chatInputContainer": {
      "description": "Container div for chat input",
      "strategies": [
        "[data-testid='chat-input']",
        "[data-testid='chat-input-grid-container']"
      ]
    },
    "sendButton": {
      "description": "Button to send chat message",
      "strategies": [
        "button[aria-label='Send message']"
      ]
    },
    "stopButton": {
      "description": "Button to stop response generation",
      "strategies": [
        "button[aria-label='Stop response']",
        "button[aria-label='Stop']"
      ]
    },
    "fileUpload": {
      "description": "Hidden file upload input in chat",
      "strategies": [
        "[data-testid='file-upload']",
        "input[type='file']",
        "input[aria-label='Upload files']"
      ]
    },
    "attachmentButton": {
      "description": "Button to attach files to message (+ icon near input)",
      "strategies": [
        "button[aria-label='Attach files']",
        "button[aria-label='Add content']",
        "[data-testid='chat-input'] button:has(svg)"
      ]
    },
    "toggleMenuButton": {
      "description": "Toggle menu button near chat input",
      "strategies": [
        "button[aria-label='Toggle menu']"
      ]
    },
    "modelSelector": {
      "description": "Model selection dropdown",
      "strategies": [
        "[data-testid='model-selector-dropdown']"
      ]
    },
    "extendedThinkingToggle": {
      "description": "Toggle for extended thinking mode",
      "strategies": [
        "button[aria-label='Extended thinking']"
      ]
    },
    "responseInProgress": {
      "description": "Indicator that Claude is still generating (stop button visible)",
      "strategies": [
        "button[aria-label='Stop response']",
        "button[aria-label='Stop']"
      ]
    },
    "responseComplete": {
      "description": "Indicator that Claude has finished responding (send button visible again)",
      "strategies": [
        "button[aria-label='Send message']",
        "[data-testid='send-button']"
      ]
    },
    "errorMessage": {
      "description": "Error message displayed in chat (rate limits, failures, etc)",
      "strategies": [
        "[data-testid='error-message']",
        "[role='alert']:visible",
        "div.bg-red-100:has-text('error')",
        "div:has-text('rate limit'):not(:has(div))"
      ]
    },
    "thinkingIndicator": {
      "description": "Indicator that Claude is thinking/processing (e.g., 'Pondering...')",
      "strategies": [
        "text=Pondering",
        "text=Thinking",
        "[class*='thinking']",
        "[class*='loading']"
      ]
    },
    "streamingText": {
      "description": "Text that is currently being streamed/generated",
      "strategies": [
        "[data-is-streaming='true']",
        "[class*='streaming']"
      ]
    }
  },

  "artifacts": {
    "artifactContainer": {
      "description": "Container for an artifact/document created by Claude",
      "strategies": [
        "[data-testid='artifact']",
        "[class*='artifact']",
        "[data-artifact-id]"
      ]
    },
    "addToProjectButton": {
      "description": "Button to add artifact to project knowledge",
      "strategies": [
        "button:has-text('Add to project')",
        "button[aria-label='Add to project']",
        "[data-testid='add-to-project']"
      ]
    },
    "artifactTitle": {
      "description": "Title of an artifact",
      "strategies": [
        "[data-testid='artifact-title']",
        "[class*='artifact'] h1",
        "[class*='artifact'] h2"
      ]
    },
    "artifactContent": {
      "description": "Content area of an artifact",
      "strategies": [
        "[data-testid='artifact-content']",
        "[class*='artifact'] [class*='content']",
        "[class*='artifact'] pre"
      ]
    },
    "copyArtifactButton": {
      "description": "Button to copy artifact content",
      "strategies": [
        "button[aria-label='Copy']",
        "button:has-text('Copy')"
      ]
    }
  },

  "messages": {
    "messageContainer": {
      "description": "Container for chat messages (scrollable area)",
      "strategies": [
        "[data-testid='chat-messages']",
        "[data-test-render-count]",
        ".relative.w-full.min-h-full"
      ]
    },
    "scrollContainer": {
      "description": "The scrollable container for chat messages",
      "strategies": [
        "[class*='flex-1'][class*='overflow']",
        "[data-test-render-count]"
      ]
    },
    "humanMessage": {
      "description": "A message from the human user",
      "strategies": [
        "[data-testid='user-message']",
        "[data-testid='human-message']",
        "[data-message-author='human']"
      ]
    },
    "assistantMessage": {
      "description": "A message from Claude",
      "strategies": [
        ".font-claude-response",
        "[data-testid='assistant-message']",
        "[data-message-author='assistant']"
      ]
    },
    "assistantMessageContent": {
      "description": "The text content of Claude's response",
      "strategies": [
        ".font-claude-response .standard-markdown",
        ".font-claude-response-body"
      ]
    },
    "messageText": {
      "description": "Text content within a message",
      "strategies": [
        ".standard-markdown",
        "[data-testid*='message'] [class*='prose']",
        "[class*='message-content']"
      ]
    }
  },

  "modals": {
    "dialog": {
      "description": "Modal dialog container",
      "strategies": [
        "[role='dialog']",
        "[role='alertdialog']"
      ]
    },
    "dialogTitle": {
      "description": "Dialog title",
      "strategies": [
        "[role='dialog'] h2",
        "[role='alertdialog'] h2"
      ]
    },
    "confirmButton": {
      "description": "Confirm/primary action button in dialogs",
      "strategies": [
        "[role='dialog'] button:has-text('Delete')",
        "[role='dialog'] button:has-text('Confirm')",
        "[role='dialog'] button:has-text('Save')"
      ]
    },
    "cancelButton": {
      "description": "Cancel button in dialogs",
      "strategies": [
        "[role='dialog'] button:has-text('Cancel')"
      ]
    },
    "closeButton": {
      "description": "Close button for dialogs",
      "strategies": [
        "[role='dialog'] button[aria-label='Close']",
        "[role='dialog'] button:has(svg)"
      ]
    }
  },

  "auth": {
    "userMenuButton": {
      "description": "User menu button when authenticated",
      "strategies": [
        "[data-testid='user-menu-button']"
      ]
    }
  }
}
