{
  "name": "claude_project_mcp",
  "version": "1.0.3",
  "mcpName": "io.github.thoughtpunch/claude_project_mcp",
  "description": "MCP server for Claude.ai Projects via browser automation",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "claude_project_mcp": "dist/server.js"
  },
  "files": [
    "dist",
    "selectors.json"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "start": "node dist/server.js",
    "dev": "tsx src/server.ts",
    "debug": "HEADED=true SLOW_MO=500 tsx src/server.ts",
    "test-selectors": "tsx src/test-selectors.ts",
    "inspect": "tsx src/inspect.ts",
    "test:plan": "python3 tests/run_integration_tests.py",
    "test:commands": "python3 tests/run_integration_tests.py --commands"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "anthropic",
    "claude-ai",
    "ai",
    "llm",
    "browser-automation",
    "playwright",
    "claude-code",
    "ai-assistant"
  ],
  "author": "thoughtpunch",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thoughtpunch/claude_project_mcp.git"
  },
  "homepage": "https://github.com/thoughtpunch/claude_project_mcp#readme",
  "bugs": {
    "url": "https://github.com/thoughtpunch/claude_project_mcp/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "playwright": "^1.40.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
